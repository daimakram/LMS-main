<%-include("partials/header");-%>
<body class="assignmentsTab" style="font-size: 2em; width: 100%; height: 100vh; display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <h1 style="left:20px;">Assignments</h1>
                    <form id="assignmentsTab" action="/assignmentsTab" method="POST" enctype="multipart/form-data">
                        <table class="table table-striped table-bordered table-hover">
                         <thead>
                            <tr>
                                <th scope="col">Assignment Title</th>
                                <th scope="col">Description</th>
                                 <th scope="col">File Attachment</th> 
                                <th scope="col">Open Date</th>
                                <th scope="col">Due Date</th>
                                <th scope="col">Your Submission</th>
                            </tr>
                        </thead> 
                         <tbody>
                            <% for(var i=0; i<assignments.length; i++){ %>
                            <tr>
                                <td> <%=assignments[i].topic%></td>
                                <td> <%=assignments[i].ass_text%> </td>
                                <td> </td>
                                <td> <%=assignments[i].released_date%> </td>
                                <td> <%=assignments[i].due_date%></td>
                                <td> <input class="form-control" type="file" placeholder="Upload File" name="assFile" accept="">
                                    <button type="submit" name="button" value="SubmitAss">Submit</button> </td> 
                            </tr> 
                            <% } %>
                        </tbody>
                    </table>
                    </form>

</body>
</html>